{
  "name": "@elmijo/ts-service",
  "version": "1.0.0",
  "description": "A forkable node.js service scaffolding to expedite creation of new services",
  "main": "dist/index.js",
  "repository": "git@github.com:ElMijo/ts-service.git",
  "author": "Jerry Anselmi <jerry.anselmi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "node ./build/index.js",
    "start:dev": "nodemon src/index.ts",
    "test": "jest --testPathPattern __tests__/unit",
    "test:integration": "jest --testPathPattern __tests__/integration",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "docs": "rimraf ./.docs && typedoc",
    "postinstall": "node -e \"process.exit(process.env.NODE_ENV === 'production'?1:0)\" &&  husky install || echo 'Git hooks skipped'",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "branchlint": "^0.0.2",
    "eslint": "^8.11.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jsdoc-plugin-typescript": "^2.0.6",
    "lint-staged": "^12.3.6",
    "nodemon": "^2.0.15",
    "pinst": "^3.0.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "resolutions": {
    "ansi-regex": "~5.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "printWidth": 80
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc",
      "prettier"
    ],
    "ignorePatterns": [
      "**/build/**/*.js",
      "**/*.d.ts"
    ],
    "rules": {
      "tsdoc/syntax": "warn",
      "prettier/prettier": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-interface": [
        "error",
        {
          "allowSingleExtends": true
        }
      ]
    }
  },
  "lint-staged": {
    "*.{ts,json,yml}": [
      "eslint .",
      "prettier --check ."
    ]
  }
}
